<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Mindnote" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.Mindnote.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <!-- Buttons -->
    <style name="ButtonStyle">
        <item name="android:background">@color/button_color</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <!-- Text Styling -->
    <style name="TitleText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


</resources>
